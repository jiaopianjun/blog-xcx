.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.pic {
  width: 600rpx;
  height: 440rpx;
}

.tip {
  font-size: 28rpx;
  color: #000000;
  margin-top: 30rpx;
}

.btn {
  margin-top: 216rpx;
  width: 368rpx;
  height: 80rpx;
  background: #07c160;
  color: #ffffff;
}

.shade {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #ffffff;
}

.modal {
  width: 640rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.modal .title {
  padding: 32rpx 24rpx 0;
  min-height: 40rpx;
  color: #000000;
  text-align: center;
}

.modal .content {
  padding: 16rpx 24rpx 0;
  font-size: 30rpx;
  color: #666666;
  text-align: center;
}

.modal .btn {
  color: #576B95;
  width: 100%;
  height: 100rpx;
  margin-top: 32rpx;
  border: hidden;
  border-top: 1px solid rgba(113,119,129,0.2);
  border-radius: 0%;
  font-size: 25rprx;
  font-weight: 550;
}