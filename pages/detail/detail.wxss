/* 文章正文样式 */
.entry-summary {
  font-size: 30rpx;
  line-height: 1.5;
  overflow: hidden;
  overflow-x: hidden;
  position: relative;
  margin-top: 20rpx;
  color: #4a5568;
  
}

/* 标题 */
.entry-title {
  font-weight: 600;
  outline: none;
  margin-bottom: 24rpx;
  color: #2d3748;
  font-size: 34rpx !important;
}

/* 文章互动数据 */
.entry-data {
  display: flex;
  align-items: center;
  height: 40rpx;
}
.entry-data .entry-data-author {
  font-size: 30rpx;
  color: #576b95;
}
.entry-data .entry-data-date {
  color: rgba(0, 0, 0, .3);
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
}


.up-down-post {
  margin: 60rpx 0;
}
.up-down-post-cont {
  border-radius: 20rpx;
  background-color: #f5f5f5;
  padding: 20rpx 40rpx;
}
/* 上下文 */
.cont-post {
  display: flex;
  padding: 20rpx 0;
  color:#666;
  font-size: 26rpx;
}
.cont-post text:first-child {
  width: 120rpx;
}
.cont-post text:last-child {
  flex:1 ;
}

/* 猜你喜欢、评论标题下的横线 */
navigator {
