  overflow: hidden;
  justify-content: center;
  font-weight: 300;
  display: flex;
  align-items: center;
  justify-content: center;
}

.likePost_title .like {
  padding: 20rpx 80rpx;
  border-radius: var(--radius);
}
.likePost_title .like text {
  font-size: 26rpx;
  font-weight: 600;
  margin-left: 10rpx;
}
.likePost_img {
  margin-top: 5px;
  margin-bottom: 5px;
  overflow: hidden;
  text-align: center;
}
.likePost_img .right {
