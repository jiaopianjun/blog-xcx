.ui-grid {
  margin: 12rpx;
}

.ui-BG-card {
  margin: 12rpx;
  padding: 0;
  overflow: hidden;
}

/* 搜索 */
.ui-search-bar {
  padding: 0 10px;
  position: relative;
  display: flex;
  align-items: center;
  height: 120rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.ui-search-bar .ui-search-action+.ui-search-form {
  margin-left: 20rpx;
}
.ui-search-bar .ui-search-form {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  color: #333;
  height: 88rpx;
  font-size: 30rpx;
}
.ui-search-icon,
.ui-search-close {
  height: 68rpx;
  line-height: 68rpx;
}
.ui-search-icon {
  margin-right: 20rpx;
}
.ui-search-input {
  position: relative;
  flex: 1;
  height: 88rpx;
}
.ui-search-text-left {
  text-align: left;
}
.ui-search-text-center {
  text-align: center;
}
.ui-search-text-right {
  text-align: right;
}
.input-placeholder {
  color: inherit;
  opacity: 0.5;
}
.ui-search-close {
  margin-left: 20rpx;
  margin-right: 25rpx;
}
.ui-search-bar .ui-search-form+.ui-search-action {
  margin-left: 20rpx;
}

.ui-item {
  text-align: center;
  position: relative;
  border-radius: 30rpx;
  overflow: hidden;
}
.ui-item-box {
  position: relative;
  border-radius: 30rpx;
  overflow: hidden;
}

.ui-card {
  margin: 12rpx !important;
}

.ui-card-bg {
  height: 160rpx;
  position: relative;
  background-size: cover;
  background-position: center;
  overflow: hidden;
  filter: saturate(160%) blur(22px);
}

.ui-card-image {
  width: 100%;
  height: 100%;
  display: inline-block;

}

.ui-card-sub {
  position: absolute;
  right: 10px;
  top: 10px;
  border: solid 1px rgba(255, 255, 255, .5);
  z-index: 1;
  color: #fff;
  padding: 2px 6px;
  background-color: rgba(0, 0, 0, 0.1);

}

.ui-card-sub:hover {
  background-color: rgba(0, 0, 0, 0.4);
}

.ui-card-content {
  padding: 160rpx 12rpx 24rpx;
  overflow: hidden;
  z-index: 9;
  color: #fff !important;
  height: 286rpx;
  background-color: rgba(0, 0, 0, .1);
  backdrop-filter: blur(4rpx);
}

.ui-card-content .dec {
  margin-top: 10rpx;
}
.ui-card-content .title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}