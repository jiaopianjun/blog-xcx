.weather {
    position: relative;
}

.loading,.weather {
    width: 100%;
    height: 40px;
}

.weather .-info {
    height: 40px;
    width: calc(100% - 40px);
    float: left;
}

.weather .-info .-temp {
    font-size: 36px;
    line-height: 40px;
    margin-right: 10px;
    float: left;
    color: var(--theme-color);
}

.weather .-info .-right {
    float: left;
    height: 40px;
}

.btn {
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 14px;
    color: var(--light-text-color);
    position: relative;
}

.btn button {
    position: absolute;
    height: 40px;
    width: 100%;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 1;
}

.weather .-info .-right .-type,.weather .-info .-right .-type .-text {
    height: 20px;
    line-height: 20px;
    font-size: 14px;
    color: var(--theme-color);
}

.weather .-info .-right .-type .-text {
    float: left;
    display: block;
}

.weather .-info .-right .-type .-tag {
    float: left;
    height: 14px;
    line-height: 14px;
    font-size: 10px;
    color: var(--light-text-color);
    border-radius: 2px;
    padding: 0 2px;
    margin-top: 2px;
    display: block;
    margin-left: 5px;
    border: 1px solid var(--light-text-color);
}

.weather .-info .-right .-wind {
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    color: var(--normal-text-color);
}

.weather .-icon {
    height: 40px;
    width: 40px;
    background-size: cover;
    float: left;
}