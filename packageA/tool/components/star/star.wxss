.like {
    position: fixed;
    background: rgba(0,0,0,.8);
    border-radius: 4px;
    padding-left: 10px;
    font-size: 12px;
    color: #fff;
    right: 15px;
    height: 30px;
    line-height: 30px;
    z-index: 1000;
    transform: translate3d(0,0,0);
}

.like .-triangle {
    position: absolute;
    top: -8px;
    right: 20px;
    width: 0;
    height: 0;
    color: #fff;
    text-align: center;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 8px solid rgba(0,0,0,.8);
}

.like .-btn,.like .-text {
    position: relative;
    float: left;
}

.like .-btn {
    background: rgba(0,0,0,.2);
    padding: 0 10px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    margin-left: 10px;
    height: 30px;
    line-height: 30px;
}