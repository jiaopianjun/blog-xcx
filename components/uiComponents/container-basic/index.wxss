.container {
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background: var(--page-bg-color);
    color: var(--text-color-1);
}

.container .-background {
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    position: fixed;
    background-size: 8px 8px;
    box-shadow: 1px 1px 8px grey;
    background-color: var(--page-bg-color);
}