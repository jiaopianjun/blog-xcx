.container {
    box-sizing: border-box;
    background: var(--page-bg-color);
    color: var(--text-color-1);
}

.container,.container .-background {
    position: fixed;
    width: 100%;
    height: 100%;
}

.container .-background {
    left: 0;
    top: 0;
    background-size: 8px 8px;
    box-shadow: 1px 1px 8px grey;
    background-color: var(--bg-color);
    background-image: linear-gradient(-45deg,var(--dark-bg-color) 25%,transparent 0,transparent 50%,var(--dark-bg-color) 0,var(--dark-bg-color) 75%,transparent 0,transparent);
}